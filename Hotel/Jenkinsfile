        sh "${mvn}/bin/mvn clean verify sonar:sonar -Dsonar.projectKey=ARQ-PROJECT -Dsonar.projectName='ARQ PROJECT' -Dsonar.projectVersion=1.0 -Dsonar.host.url=http://localhost:9000 -Dsonar.login=sqa_fdef49f77e84c5a79e5ad628afd5dd8b3e59fc81 -Dsonar.projectToken=sqp_da4512d7cc942907261f11ebe4a43026b2b54ce9"
      }
    }
  }
}
