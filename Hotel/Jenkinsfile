pipeline {
    agent any

    environment {
        DOCKERHUB_CREDENTIALS = credentials('554fa22a-b8cf-4538-bb29-778d1bc87aea')
        SONARQUBE_ENV = 'SonarQube'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout([$class: 'GitSCM', 
                          branches: [[name: '*/main']], 
                          doGenerateSubmoduleConfigurations: false, 
                          extensions: [], 
                          submoduleCfg: [], 
                          userRemoteConfigs: [[url: 'https://github.com/PM-Organization/ARQ.git']]
                ])
            }
        }

        stage('Build Backend') {
            steps {
                dir('backend/sistema-hoteles-be') {
                    script {
                        dockerImageBackend = docker.build("backend-image:latest")
                    }
                }
            }
        }

        stage('Build Frontend') {
            steps {
                dir('frontend/sistema_hoteles') {
                    script {
                        dockerImageFrontend = docker.build("frontend-image:latest")
                    }
                }
            }
        }

        stage('Unit Tests') {
            steps {
                dir('backend/sistema-hoteles-be') {
                    sh './mvnw test'
                }
                dir('frontend/sistema_hoteles') {
                    sh 'npm test'
                }
            }
        }

        stage('Code Quality Analysis') {
            steps {
                withSonarQubeEnv('SonarQube') {
                    dir('backend/sistema-hoteles-be') {
                        sh './mvnw sonar:sonar'
                    }
                    dir('frontend/sistema_hoteles') {
                        sh 'npm run sonar'
                    }
                }
            }
        }

        stage('Build and Push Docker Images') {
            steps {
                script {
                    docker.withRegistry('https://registry.hub.docker.com', '554fa22a-b8cf-4538-bb29-778d1bc87aea') {
                        dockerImageBackend.push("main")
                        dockerImageFrontend.push("main")
                    }
                }
            }
        }

        stage('Deploy to Environment') {
            steps {
                script {
                    dockerImageBackend.run('-p 8085:8085 backend-image:main')
                    dockerImageFrontend.run('-p 3000:3000 frontend-image:main')
                }
            }
        }
    }

    post {
        failure {
            mail to: 'pdmorales@unis.edu.gt',
                 subject: "Build Failed: ${env.BUILD_TAG}",
                 body: "Something is wrong with the build ${env.BUILD_URL}"
        }
        success {
            script {
                currentBuild.description = "Build Successful: main branch"
            }
        }
    }
}
